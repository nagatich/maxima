{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "baseUrl": "./src",
    "importsNotUsedAsValues": "preserve",
    "lib": ["esnext", "dom"],
    "module": "commonjs",
    "noEmit": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "jsx": "react",
    "strict": true,
    "target": "esnext",
    "typeRoots": ["./node_modules/@types"],
    "types": ["node", "jest"]
  },
  "paths": {
    "~/*": ["src/"]
  },
  "include": [
    "src/**/*ts",
    "src/**/*tsx",
    "src/**/*.d.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
